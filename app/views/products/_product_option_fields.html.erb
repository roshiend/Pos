
<%#_product_option_fields.html.erb%>
<div class="product-options-wrapper"data-new-record="<%= f.object.new_record? %>">
  <% cache "option_type_list" do %>
      
    <%= f.select :name, options_for_select(OptionTypeSet.all.map { |option| [option.name, option.name] }, selected: f.object.name), { prompt: 'Select option name' }, class: 'product-option-name-select form-control slim-select', id: "product-option-name-select_#{f.index}" %>
    <%= f.select :value, options_for_select(OptionValueSet.all.map { |ov| [ov.value, ov.value] }, selected: f.object.value), { include_hidden: false, prompt: 'Select value' }, class: 'product-option-value-select form-control slim-select', id: "product-option-value-select_#{f.index}", multiple: true %>
    <% end %>
  <button type="button" data-action="product-options#remove">Remove Option</button>
  <%= f.hidden_field :_destroy, value: false %>
</div>

